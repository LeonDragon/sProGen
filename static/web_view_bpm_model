digraph BPMN {
    rankdir=LR;
    node [shape=circle, style=filled, color=lightblue, penwidth=2];
    Start_RegisterInquiry [label="", color=forestgreen];
    End_ApproveResponse [label="", color=firebrick, penwidth=3];

    node [
        shape=box, 
        style="rounded,filled", 
        fillcolor=lightgoldenrodyellow, 
        color=black,
        penwidth=1, 
        fontcolor=black
    ];
    A_RegisterInquiry [label="RegisterInquiry"];
    A_ApproveResponse [label="ApproveResponse"];
    A_PrepareResponse [label="PrepareResponse"];
    A_ReviewResponse [label="ReviewResponse"];
    A_PrepareResponseAgain [label="PrepareResponseAgain"];
    A_InvestigateInquiry [label="InvestigateInquiry"];

    node [
        shape=diamond, 
        style=filled, 
        fillcolor=gold, 
        color=black, 
        penwidth=1
    ];
    XOR_ReviewResponse [label="XOR"];
    XOR_FinalizeResponse [label="XOR"];
    Start_RegisterInquiry -> A_RegisterInquiry;
    A_RegisterInquiry -> A_InvestigateInquiry;
    A_InvestigateInquiry -> A_PrepareResponse;
    A_PrepareResponse -> A_ReviewResponse;
    A_ReviewResponse -> XOR_ReviewResponse;
    XOR_ReviewResponse -> A_PrepareResponseAgain [label="if response is not approved"];
    XOR_ReviewResponse -> A_ApproveResponse [label="if response is approved"];
    A_PrepareResponseAgain -> A_ReviewResponse;
    A_ApproveResponse -> XOR_FinalizeResponse;
    XOR_FinalizeResponse -> End_ApproveResponse;
}
