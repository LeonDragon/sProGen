digraph BPMN {
    rankdir=LR;
    node [shape=circle, style=filled, color=lightblue, penwidth=2];
    Start_ShippingGoods [label="", color=forestgreen];
    End_PrepareForPickup [label="", color=firebrick, penwidth=3];

    node [
        shape=box, 
        style="rounded,filled", 
        fillcolor=lightgoldenrodyellow, 
        color=black,
        penwidth=1, 
        fontcolor=black
    ];
    A_BeginPackagingGoods [label="BeginPackagingGoods"];
    A_ArrangeParcelInsurance [label="ArrangeParcelInsurance"];
    A_ClarifyShippingMethod [label="ClarifyShippingMethod"];
    A_InviteLogisticsCompanies [label="InviteLogisticsCompanies"];
    A_PrepareGoodsForPickup [label="PrepareGoodsForPickup"];
    A_WritePackageLabel [label="WritePackageLabel"];
    A_SelectLogisticsCompany [label="SelectLogisticsCompany"];

    node [
        shape=diamond, 
        style=filled, 
        fillcolor=gold, 
        color=black, 
        penwidth=1
    ];
    XOR_ShippingComplete [label="XOR"];
    XOR_ShippingMethod [label="XOR"];
    Start_ShippingGoods -> A_ClarifyShippingMethod;
    A_ClarifyShippingMethod -> XOR_ShippingMethod;
    XOR_ShippingMethod -> A_InviteLogisticsCompanies [label="if the amount is large"];
    XOR_ShippingMethod -> A_WritePackageLabel [label="if the amount is small"];
    A_InviteLogisticsCompanies -> A_SelectLogisticsCompany;
    A_SelectLogisticsCompany -> A_WritePackageLabel;
    A_WritePackageLabel -> A_ArrangeParcelInsurance;
    A_ArrangeParcelInsurance -> A_BeginPackagingGoods;
    A_BeginPackagingGoods -> XOR_ShippingComplete;
    XOR_ShippingComplete -> A_PrepareGoodsForPickup;
    A_PrepareGoodsForPickup -> End_PrepareForPickup;
}
