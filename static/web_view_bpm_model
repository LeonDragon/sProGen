digraph BPMN {
    rankdir=LR;
    node [shape=circle, style=filled, color=lightblue, penwidth=2];
    Start_RegisterInquiry [label="", color=forestgreen];
    End_FinalizeAndApproveResponse [label="", color=firebrick, penwidth=3];

    node [
        shape=box, 
        style="rounded,filled", 
        fillcolor=lightgoldenrodyellow, 
        color=black,
        penwidth=1, 
        fontcolor=black
    ];
    A_RegisterInquiry [label="RegisterInquiry"];
    A_PrepareResponse [label="PrepareResponse"];
    A_RejectResponse [label="RejectResponse"];
    A_InvestigateInquiry [label="InvestigateInquiry"];
    A_ReviewResponse [label="ReviewResponse"];
    A_ApproveResponse [label="ApproveResponse"];

    node [
        shape=diamond, 
        style=filled, 
        fillcolor=gold, 
        color=black, 
        penwidth=1
    ];
    XOR_FinalizeResponse [label="XOR"];
    XOR_ReviewResponseDecision [label="XOR"];
    Start_RegisterInquiry -> A_RegisterInquiry;
    A_RegisterInquiry -> A_InvestigateInquiry;
    A_InvestigateInquiry -> A_PrepareResponse;
    A_PrepareResponse -> A_ReviewResponse;
    A_ReviewResponse -> XOR_ReviewResponseDecision;
    XOR_ReviewResponseDecision -> A_ApproveResponse [label="if response meets required standards"];
    XOR_ReviewResponseDecision -> A_RejectResponse [label="if response does not meet required standards"];
    A_RejectResponse -> A_PrepareResponse;
    A_ApproveResponse -> XOR_FinalizeResponse;
    XOR_FinalizeResponse -> End_FinalizeAndApproveResponse;
}
