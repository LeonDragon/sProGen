digraph BPMN {
    rankdir=LR;
    node [shape=circle, style=filled, color=lightblue, penwidth=2];

    // Start and End nodes
    Start_ReceiveOrder [label="", color=forestgreen];
    End_RegisterOrder [label="", color=firebrick, penwidth=3];

    // Activities
    node [
        shape=box, 
        style="rounded,filled", 
        fillcolor=lightgoldenrodyellow, 
        color=black,
        penwidth=1, 
        fontcolor=black];
    A_SendSubOrderAmsterdam [label="Send Sub 
 Order Amsterdam"];
    A_SendSubOrderHamburg [label="Send Sub 
 Order Hamburg"];
    A_RegisterOrder [label="Register 
 Order"];

    // Gateways
    node [
        shape=diamond, 
        style=filled, 
        fillcolor=gold, 
        color=black, 
        penwidth=1];
    OR_DistributeOrder [label="O"];
    AND_RegisterOrder [label="+"];

    // Edges
    Start_ReceiveOrder -> OR_DistributeOrder;

    OR_DistributeOrder -> A_SendSubOrderAmsterdam [label="if some of the 
 relevant products are 
 maintained in Amsterdam"];
    OR_DistributeOrder -> A_SendSubOrderHamburg [label="if some relevant 
 products are 
 maintained in Hamburg"];
    A_SendSubOrderAmsterdam -> AND_RegisterOrder;
    A_SendSubOrderHamburg -> AND_RegisterOrder;
    AND_RegisterOrder -> A_RegisterOrder;
    A_RegisterOrder -> End_RegisterOrder;

    // Labels positioned below the nodes
    start_label [shape=plaintext, label="Start: Receive Order", fillcolor=white];
    end_label [shape=plaintext, label="End: Register Order", fillcolor=white];

    { rank=same; Start_ReceiveOrder; start_label; }
    { rank=same; End_RegisterOrder; end_label; }

    // Invisible edges for proper label positioning
    Start_ReceiveOrder -> start_label [style=invis];
    End_RegisterOrder -> end_label [style=invis];
}
