digraph BPMN {
    rankdir=LR;
    node [shape=circle, style=filled, color=lightblue, penwidth=2];
    Start_ReceiveInquiry [label="", color=forestgreen];
    End_ApproveResponse [label="", color=firebrick, penwidth=3];

    node [
        shape=box, 
        style="rounded,filled", 
        fillcolor=lightgoldenrodyellow, 
        color=black,
        penwidth=1, 
        fontcolor=black
    ];
    A_InvestigateInquiry [label="InvestigateInquiry"];
    A_PrepareResponse [label="PrepareResponse"];
    A_RegisterInquiry [label="RegisterInquiry"];
    E_ReviewResponse [label="ReviewResponse"];
    A_PrepareForRevision [label="PrepareForRevision"];

    node [
        shape=diamond, 
        style=filled, 
        fillcolor=gold, 
        color=black, 
        penwidth=1
    ];
    XOR_ApproveResponse [label="XOR"];
    XOR_RegisterInquiry [label="XOR"];
    Start_ReceiveInquiry -> XOR_RegisterInquiry;
    XOR_RegisterInquiry -> A_RegisterInquiry;
    XOR_RegisterInquiry -> A_InvestigateInquiry;
    A_RegisterInquiry -> A_InvestigateInquiry;
    A_InvestigateInquiry -> A_PrepareResponse;
    A_PrepareResponse -> E_ReviewResponse;
    E_ReviewResponse -> XOR_ApproveResponse;
    XOR_ApproveResponse -> End_ApproveResponse [label="if approved"];
    A_PrepareForRevision -> A_InvestigateInquiry;
    A_PrepareForRevision -> E_ReviewResponse;
    XOR_ApproveResponse -> A_PrepareForRevision [label="if not approved"];
}
